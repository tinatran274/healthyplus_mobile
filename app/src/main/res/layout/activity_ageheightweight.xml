<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="10dp"
    tools:context=".Activity.BasicInfo.AgeHeightWeightActivity">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="50"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:gravity="center|top"
        android:padding="@dimen/marginBase"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy nhập tuổi, chiều cao và cân nặng của bạn"
            android:textSize="@dimen/textNormal"
            android:gravity="center"/>
            />
        <EditText
            android:id="@+id/edtAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Tuổi"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Chiều cao(cm)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edtWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Cân nặng(kg)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnTiepTuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:background="@drawable/button_background"
        android:textColor="@color/white_word"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/marginBase"
        />
</LinearLayout>