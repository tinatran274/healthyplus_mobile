<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/cs_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imv_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/img_user_stars"
        app:layout_constraintTop_toBottomOf="@+id/txv_time"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/txv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/black_word"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border_white_chat"
        app:layout_constraintTop_toBottomOf="@+id/txv_time"
        app:layout_constraintRight_toLeftOf="@+id/imv_user"
        />
    <TextView
        android:id="@+id/txv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HÃ´m nay 13:24"
        android:textSize="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/gray_word"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>